{
  "name": "@ugrc/turn-gps-billpay-app",
  "description": "A React app for the UGRC TURN GPS Bill Pay",
  "private": true,
  "version": "1.0.0-24",
  "license": "MIT",
  "author": "UGRC",
  "main": "./src/functions/index.mjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:firebase": "firebase emulators:start --import .firebase-export --only auth,functions,firestore",
    "save-firebase-state": "firebase emulators:start --import .firebase-export --export-on-exit --only auth,functions,firestore",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint ./ --ext .js,.mjs,.jsx --ignore-path ./.eslintignore",
    "lint:fix": "eslint ./ --ext .js,.mjs,.jsx --quiet --fix --ignore-path ./.eslintignore",
    "fb:serve": "firebase emulators:start --only functions",
    "fb:deploy": "firebase deploy --only functions",
    "start": "npm run dev",
    "graphql": "node src/functions/index.mjs",
    "test": "vitest --silent --coverage --ui --open --passWithNoTests",
    "test:ci": "npm run test",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@headlessui/react": "1.7.16",
    "@heroicons/react": "2.0.18",
    "@hookform/error-message": "2.0.1",
    "@hookform/resolvers": "3.1.1",
    "@tanstack/react-query": "4.32.0",
    "@tanstack/react-query-devtools": "4.32.0",
    "@utahdts/utah-design-system": "1.4.0",
    "@utahdts/utah-design-system-header": "1.4.0",
    "apollo-server-express": "3.12.0",
    "cacheable-lookup": "7.0.0",
    "camelcase": "7.0.1",
    "clsx": "1.2.1",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "firebase": "10.3.1",
    "firebase-admin": "11.10.1",
    "firebase-functions": "4.4.1",
    "glob": "10.3.3",
    "lodash": "4.17.21",
    "mssql": "9.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.10",
    "react-hook-form": "7.45.2",
    "react-router-dom": "6.14.2",
    "reactfire": "4.2.3",
    "use-immer": "0.9.0",
    "yup": "1.2.0"
  },
  "devDependencies": {
    "@types/react": "18.2.17",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react-swc": "3.3.2",
    "@vitest/coverage-v8": "0.34.1",
    "@vitest/ui": "0.33.0",
    "cross-env": "7.0.3",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "7.33.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.3",
    "firebase-tools": "12.4.8",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.0",
    "sass": "1.64.1",
    "vite": "4.4.7",
    "vite-plugin-eslint": "1.8.1",
    "vite-plugin-mkcert": "1.16.0",
    "vite-plugin-package-version": "1.0.2",
    "vitest": "0.33.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "prettier",
      "jsx-a11y",
      "react-hooks",
      "react-refresh"
    ],
    "rules": {
      "react-refresh/only-export-components": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,mjs}": "eslint --cache --fix",
    "*.{md,yml,yaml,json}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
